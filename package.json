{
  "name": "dslint",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "bin": {
    "dslint": "./dist/cli.js"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "tsc --outDir dist --rootDir src",
    "build-clean": "npm run clean && npm run build",
    "test": "jest src/",
    "test:watch": "npm t -- --watch"
  },
  "author": "Vu Tran <vu@vu-tran.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/got": "^9.4.1",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.12.0",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.4000"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "got": "^9.6.0",
    "nearest-color": "^0.4.4"
  }
}
